@model List<Product>
@{
    string image = "";
    ViewData["Title"] = "All Products";
}
<h2>All Products</h2>
<a class="btn btn-secondary" asp-action="Create">Add Product</a>

<div class="mt-4">
    @if (Model.Any())
    {
        <div class="row">
            @foreach (Product product in Model)
            {

                image = ProductController.ProductPhotoRootPath + "/" + product.ImageURL;

                <div class="col-12">
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <div class="col-md-2">
                                <img src="@image" class="img-fluid" alt="@product.Name">
                            </div>
                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <h5 class="card-title">@product.Name </h5>
                                        <h5>Category : @product.Category.Name</h5>
                                        <p class="card-text text-justify">@(product.Description.Length > 500 ? $"{product.Description.Substring(0, 500)}..." : product.Description)</p>
                                    </div>
                                    <div class="d-flex justify-content-between">

                                        <div>
                                            <a asp-action="Details" asp-route-id="@product.ID" class="btn btn-outline-secondary">
                                                <i class="bi bi-ticket-detailed"></i>
                                                Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@product.ID" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                                Edit
                                            </a>
                                            <a onclick="return confirm('Are You Sure You Want to Delete @product.Name Product ?' )"
                                               class="btn btn-danger "
                                               asp-action="Delete" asp-route-id="@product.ID">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div mt-2 class="alert alert-warning">No Products Yet </div>
    }
</div>