@model Category

@{
    ViewData["title"] = "View Projects Type";

}
<br />
<br />
<br />
<br />
<br />
<div>
    <div class="card-header ">
        @Model.Name
    </div>
    <div class="card-body text-center">
        <img class="card-icon" src="@Model.ImageURL" asp-append-version="true" style="width:30em;height:20em;" />


        <h4>@Model.Description<h4>

    </div>
    <div class="card-footer text-center justify-content-between">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="delete"
            onclick="return confirm('Are You Sure You Want To Delete @Model.Name ?')" 
            asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        }
        
    </div>
</div> 